@using Vidly.Models
@model List<Movie>

@{
   
}

<!DOCTYPE html>

<html>
<head>
    <title>Movies</title>
</head>
<body>
<div>
    <h1>Movies</h1>
    @Html.ActionLink("Add Movie", "New", "Movies", new {@class = "btn btn-primary float-right"})
    @if (Model.Count == 0)
    {
        <h2>We don't have any customerDto yet!</h2>
    }
    else
    {

        <table id="movies" class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Movies</th>
                <th scope="col">Genre</th>
                <th scope="col">Delete</th>


            </tr>

            </thead>
            <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new {id = movie.Id}, new {@class = "nav-link"})</td>
                    <td>@movie.Genre.Name</td>
                    <td><button data-movie-id="@movie.Id" class="btn btn-danger js-delete">Delete</button></td>

                </tr>
            }
            </tbody>
        </table>
    }


</div>
    @section scripts
    {
        <script>
            $(document).ready(function () {
               var table= $("#movies").DataTable();

                $("#movies").on("click", ".js-delete", function () {
                    var button = $(this);
                    
                    if (confirm("Are you want to delete this  movie?")) {
                        $.ajax({
                            url: "/api/movies/" + $(this).attr("data-movie-id"),
                            type: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();

                            }
                        });
                    }

                });
            });
        </script>
    }
</body>
</html>