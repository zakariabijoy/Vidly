@using Vidly.Models
@model List<Movie>

@{
   
}

<!DOCTYPE html>

<html>
<head>
    <title>Movies</title>
</head>
<body>
<div>
    <h1>Movies</h1>
    @Html.ActionLink("Add Movie", "New", "Movies", new {@class = "btn btn-primary float-right"})
    @if (Model.Count == 0)
    {
        <h2>We don't have any customer yet!</h2>
    }
    else
    {

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Movies</th>
                <th scope="col">Genre</th>


            </tr>

            </thead>
            <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new {id = movie.Id}, new {@class = "nav-link"})</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
            </tbody>
        </table>
    }


</div>
</body>
</html>